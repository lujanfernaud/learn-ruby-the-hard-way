<div class="row">
  <div class="col-sm-12">   
    <h2>High Scores</h2>
  </div>
</div>

<div class="row voffset-2">
  <div class="col-sm-12">

    <table class="table table-striped">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Date</th>
        <th>Time</th>
        <th>Score</th>
      </tr>
      <% i = 0 %>
      <% @scores.each do |data| %>
        <% if data == @current_user_data %>
          <% if data == @maximum_score_data %>
            <tr class="success">
          <% else %>
            <tr class="info">
          <% end %>
        <% else %>
          <tr>
        <% end %>
          <td><%= i += 1 %></td>
          <td><%= data[:user_name] %></td>
          <td><%= data[:date] %></td>
          <td><%= data[:total_time] %></td>
          <td><%= data[:score] %></td>
        </tr>
      <% end %>
    </table>
  
  </div>
</div>

<div class="row voffset">
  <div class="col-sm-12">
    <a href="/" class="btn btn-default btn-block" role="button">Play Again</a>
  </div>
</div>