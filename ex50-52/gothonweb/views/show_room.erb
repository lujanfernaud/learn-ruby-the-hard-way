<h1>
  <%= room.name %>
</h1>

<p>
  <%= room.description %>
</p>

<% if room.show_actions %>
  <p>Type 'actions' to see available actions.</p>
<% end %>

<% if room.show_actions %>
  <% if show_actions? %>
    <% i = 1 %> 
    <h2><%= "Actions: " %></h2>
    <ul>
    <% room.paths.keys.each do |action| %>
      <% if action != "next!" %>
        <li><%= "- #{action}" %></li>
      <% end %>
      <% i += 1 %>
    <% end %>
    </ul>
  <% end %>
<% end %>

<% if room.keypad %>
  <p>Type 'hint!' to receive a hint.</p>
<% end %>

<% if room.keypad %>
  <% if show_hint? %>
    <p><%= show_code_hint(room.code) %></p>
  <% end %>
<% end %>

<% if does_not_compute? %>
  <p>DOES NOT COMPUTE!</p>
<% end %>

<% if room.name =~ /death/ %>
  <p><%= show_last_death_line %></p>
  <p><a href="/">Play Again?</a></p>
<% elsif room.name == "The End" %>
  <p><a href="/">Play Again?</a></p>
<% else %>
  <form action="/game" method="POST">
    <input type="text" name="action">
    <input type="submit">
  </form>
<% end %>